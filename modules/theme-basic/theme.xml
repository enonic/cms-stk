<theme>
    <region-prefix/>
    <!--<accessibility>
        <access-key key="m" text="stk.accessibility.main-menu" anchor="menu-main" />
        <access-key key="s" text="stk.accessibility.sub-menu" anchor="menu-sub" />
        <access-key key="c" text="stk.accessibility.center" anchor="center" />
    </accessibility>-->
    <device-classes>
        <device-class name="desktop,unknown">
            <layout name="default">
                <area width="800">
                    <region name="north">
                        <width>800</width>
                        <margin>
                            <bottom>10</bottom>
                        </margin>
                    </region>
                </area>
                <area width="800">
                    <region name="west">
                        <width>180</width>
                        <margin>
                            <right>10</right>
                        </margin>
                    </region>
                    <region name="center" element="section" class="">
                        <padding>
                            <right>0</right>
                            <left>0</left>
                            <top>20</top>
                            <bottom>20</bottom>
                        </padding>
                        <scalable>true</scalable>
                        <system>true</system>
                    </region>
                    <region name="east">
                        <width>180</width>
                        <margin>
                            <left>10</left>
                        </margin>
                    </region>
                </area>
                <area width="950">
                    <region name="south">
                        <width>950</width>
                    </region>
                </area>
            </layout>
            <image>
                <format>jpeg</format>
                <quality>80</quality>
                <filters>
                    <filter>rounded(4)</filter>
                </filters>
                <sizes>
                    <size name="full">
                        <filter>scalewidth</filter>
                        <width>1</width>
                    </size>
                    <size name="wide">
                        <filter>scalewide</filter>
                        <width>1</width>
                        <height>0.4</height>
                    </size>
                    <size name="regular">
                        <filter>scalewidth</filter>
                        <width>0.4</width>
                    </size>
                    <size name="list">
                        <filter>scalewidth</filter>
                        <width>0.3</width>
                    </size>
                    <size name="square">
                        <filter>scalesquare</filter>
                        <size>0.4</size>
                    </size>
                    <size name="thumbnail">
                        <filter>scalesquare</filter>
                        <size>0.1</size>
                    </size>
                </sizes>
            </image>
            <styles>
                <style>/_public/theme-basic/css/desktop.css</style>
            </styles>
            <scripts>
                <script>/_public/theme-basic/javascript/all.js</script>
                <script>/_public/theme-basic/javascript/desktop.js</script>
            </scripts>
        </device-class>
        <device-class name="mobile">
            <layout name="default">
                <area width="320">
                    <regions>
                        <region name="north">
                            <width>296</width>
                            <padding>
                                <left>0</left>
                                <right>0</right>
                                <top>12</top>
                                <bottom>12</bottom>
                            </padding>
                        </region>
                        <region name="center">
                            <width>296</width>
                            <padding>
                                <left>0</left>
                                <right>0</right>
                                <top>20</top>
                                <bottom>20</bottom>
                            </padding>
                        </region>
                        <region name="south">
                            <width>296</width>
                            <padding>
                                <left>0</left>
                                <right>0</right>
                                <top>12</top>
                                <bottom>12</bottom>
                            </padding>
                        </region>
                    </regions>
                </area>                    
            </layout>
            <image>
                <format>jpeg</format>
                <quality>70</quality>
                <filters>
                    <filter>rounded(4)</filter>
                </filters>
                <sizes>
                    <size name="full">
                        <filter>scalewidth</filter>
                        <width>1</width>
                    </size>
                    <size name="wide">
                        <filter>scalewide</filter>
                        <width>1</width>
                        <height>0.4</height>
                    </size>
                    <size name="regular">
                        <filter>scalewidth</filter>
                        <width>0.4</width>
                    </size>
                    <size name="list">
                        <filter>scalewidth</filter>
                        <width>0.3</width>
                    </size>
                    <size name="square">
                        <filter>scalesquare</filter>
                        <size>0.4</size>
                    </size>
                    <size name="thumbnail">
                        <filter>scalesquare</filter>
                        <size>0.1</size>
                    </size>
                </sizes>
            </image>
            <styles>
                <style>/_public/theme-basic/css/mobile.css</style>
            </styles>
            <scripts>
                <script>/_public/theme-basic/javascript/all.js</script>
                <script>/_public/theme-basic/javascript/mobile.js</script>
            </scripts>
        </device-class>
    </device-classes>
</theme>
